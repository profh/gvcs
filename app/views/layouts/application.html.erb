<!DOCTYPE html>
<html>
  <head>
    <title>GVCS Submission System</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= favicon_link_tag asset_path('browser_logo.jpeg') %>
    
  </head>

  <body>
    <%= render :partial => "partials/topbar" %>

    <% if logged_in? && ( current_user.role?(:case_worker) ) %>
      <%= render :partial => "partials/nav_case_worker" %>
    <% elsif logged_in? && current_user.role?(:parent) %>
      <%= render :partial => "partials/nav_foster_parent" %>
    <% else %>
      <%= render :partial => "partials/nav_guest" %>
    <% end %>

    

      <div id="main_content">
      <!-- Main content of template goes here -->
      <%= render :partial => "partials/flash"%>

      <div id="padded_content">
        <%= yield %>
      </div>

    </div>

    <%= render :partial => "partials/footer" %><br>
  </body>
</html>
