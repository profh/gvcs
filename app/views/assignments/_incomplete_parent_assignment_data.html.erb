<div class="card">
        <div class="card-content">
            <h4><%= "Incomplete Assigned Forms for: #{@parent.p1_last_name}, #{@parent.p1_first_name}"%></h4>

            <% if @incomplete_assignments.empty? %>
                <p>There are no incomplete assignments at this time.</p>
            <%else %>


                <table class = "striped highlight">
                    <thead>
                        <th>Category Name</th>
                        <th>Item Name</th>
                        <th>Due Date</th>
                        <th>Status</th>
                        <th>Completion</th>
                        
                    </thead>
                    <% for assignment in @incomplete_assignments %>
                        
                        <tr>
                            <td><%= link_to "#{assignment.item.category.name}", category_path(assignment.item.category)%></td>
                            <td><%= link_to "#{assignment.item.name}", parent_show_path(id: assignment.item.id, parent_id: assignment.parent.id) %> </td>
                            <td><%= "#{assignment.due_date}" %> </td>
                            <td><%= "#{assignment.updatestatus}" %> </td>
                            <td style="color: #f04735">Incomplete</td>
                        </tr>
                        
                    <% end %>
                </table>
            <%end%>
        </div>
    </div>