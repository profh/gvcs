<div class="card">
        <div class="card-content">
            <h4>Active Checklist Categories</h4>

            <% if @active_categories.empty? %>
                <p>There are no active categories at this time.</p>
             
            <%else %>
                <table class = "striped highlight">
                    <thead>
                        <th>Category Name</th>
                        <th>Number of Form Items</th>
                        <% if !current_user.nil? && current_user.role?(:parent) %>
                            <th>Completion</th>
                        <% end %>
                    </thead>
                    <% for category in @active_categories %>
                        <% if category.active?%>
                            <tr>
                                <td><%= link_to "#{category.name}", category_path(category)%></td>
                                <td><%= "#{category.items.size}" %> </td>
                                <% if !current_user.nil? && current_user.role?(:parent) %>
                                    <td><%= "Incomplete" %></td>
                                <% end %>
                            </tr>
                        <% end %>
                    <% end %>
                </table>
            <%end%>
        </div>
    </div>